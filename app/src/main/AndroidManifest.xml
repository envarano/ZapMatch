<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.tempest.zapmatch"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="GoogleAppIndexingWarning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-6086432284953891~9274629725"/>
        <activity
            android:name="dev.tempest.zapmatch.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="dev.tempest.zapmatch.AchievementsScreen"
            android:label="AchievementsScreen"
            android:screenOrientation="portrait"
            android:parentActivityName="dev.tempest.zapmatch.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.tempest.zapmatch.MainActivity" />
        </activity>
        <activity
            android:name="dev.tempest.zapmatch.GameScreen"
            android:label="Game"
            android:screenOrientation="portrait"
            android:parentActivityName="dev.tempest.zapmatch.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.tempest.zapmatch.MainActivity" />
        </activity>
        <activity
            android:name="dev.tempest.zapmatch.Level"
            android:label="Level"
            android:screenOrientation="portrait"
            android:parentActivityName="dev.tempest.zapmatch.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.tempest.zapmatch.MainActivity" />
        </activity>
        <activity
            android:name="dev.tempest.zapmatch.LevelMenu"
            android:label="LevelMenu"
            android:screenOrientation="portrait"
            android:parentActivityName="dev.tempest.zapmatch.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.tempest.zapmatch.MainActivity" />
        </activity>
        <activity
            android:name="dev.tempest.zapmatch.InfoScreen"
            android:label="Info"
            android:screenOrientation="portrait"
            android:parentActivityName="dev.tempest.zapmatch.MainActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.tempest.zapmatch.MainActivity" />
        </activity>
    </application>

</manifest>